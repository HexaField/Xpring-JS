{
  "name": "xpring-js",
  "version": "1.2.5",
  "description": "XpringJS provides a Javascript based SDK for interacting with the Ripple Ledger.",
  "main": "build/src/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xpring-eng/Xpring-JS.git"
  },
  "author": "Keefer Taylor | Xpring Engineering <ktaylor@ripple.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xpring-eng/Xpring-JS/issues"
  },
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "build": "npm run test && tsc -d",
    "webpack": "npm run test && webpack",
    "clean": "rm -rf ./src/generated ./dist ./build",
    "pretest": "npm run clean && ./scripts/regenerate_protos.sh && npm run lint",
    "lint": "eslint **/*.ts",
    "lint:fix": "eslint **/*.ts --fix",
    "test": "nyc mocha",
    "prepublishOnly": "npm run build"
  },
  "homepage": "https://github.com/xpring-eng/Xpring-JS#readme",
  "devDependencies": {
    "@types/chai": "4.2.7",
    "@types/chai-string": "1.4.2",
    "@types/google-protobuf": "3.7.2",
    "@types/mocha": "5.2.7",
    "@types/node": "^13.1.7",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "chai": "4.2.0",
    "chai-string": "1.5.0",
    "coveralls": "3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-mocha": "^6.2.2",
    "eslint-plugin-prettier": "3.1.2",
    "grpc-tools": "^1.8.0",
    "grpc-web": "^1.0.7",
    "grpc_tools_node_protoc_ts": "^2.5.10",
    "mocha": "7.0.0",
    "mocha-lcov-reporter": "1.3.0",
    "nyc": "15.0.0",
    "prettier": "1.19.1",
    "source-map-support": "0.5.16",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.7.5",
    "typescript-eslint-parser": "22.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "grpc": "^1.24.2",
    "xhr2": "^0.2.0",
    "xpring-common-js": "^2.0.0"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "all": true,
    "check-leaks": true
  }
